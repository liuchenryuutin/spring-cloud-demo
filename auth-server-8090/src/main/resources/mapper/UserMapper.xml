<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lc.cy.core.dao.LoginDao">
    <select id="getUserByID" parameterType="java.util.Map" resultType="lc.cy.core.dto.User">
		SELECT
			user_id,
			password,
			username,
			role_cd
		from db_com.tbl_user
		where user_id = #{id}
	</select>
</mapper>